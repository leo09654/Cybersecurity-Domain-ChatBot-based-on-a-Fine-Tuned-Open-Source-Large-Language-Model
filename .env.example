# n8n Configuration
N8N_HOST=localhost
N8N_PORT=5678
N8N_PROTOCOL=http

# HuggingFace API Configuration
HF_API_KEY=your_huggingface_api_key_here

# Scanner Configuration
SCAN_PATH=/path/to/scan/directory
LOG_PATH=/path/to/log/directory

# Notification Settings
WEBHOOK_URL=http://your-webhook-url/endpoint
TEAMS_WEBHOOK=your_teams_webhook_url
SLACK_WEBHOOK=your_slack_webhook_url
DISCORD_WEBHOOK=your_discord_webhook_url
EMAIL_SMTP=smtp.example.com
EMAIL_USER=your_email@example.com
EMAIL_PASS=your_email_password
EMAIL_TO=alerts@example.com

# Security Settings
SECURITY_LEVEL=medium
MAX_FILE_SIZE=10000000

# Network Monitor Settings
NMAP_SCAN_INTERVAL=30  # minutes
PORT_SCAN_TIMEOUT=60   # seconds
ALLOWED_PORTS=80,443,3306,5432  # comma-separated list

# Log Analysis Settings
LOG_SCAN_INTERVAL=60   # minutes
ERROR_THRESHOLD=5      # minimum errors to trigger alert
LOG_RETENTION_DAYS=30  # days to keep logs

# Integration Settings
VIRUSTOTAL_API_KEY=your_virustotal_api_key
SHODAN_API_KEY=your_shodan_api_key
METASPLOIT_URL=http://localhost:55553
METASPLOIT_API_KEY=your_msf_api_key 